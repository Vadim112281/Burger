@model Order

@{
    ViewData["Title"] = "Завершення замовлення";
}


    <form method="post">
    <section class="h-100 h-custom" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-8 col-xl-6">
                    <div class="card border-top border-bottom border-3" style="border-color: #f37a27 !important;">
                        <div class="card-body p-5">
                            <p class="lead fw-bold mb-5" style="color: #f37a27;">Рахунок</p>

                            <div class="row">
                                <div class="col mb-3">
                                    <p class="small text-muted mb-1">Order No.</p>
                                    <p>@Model.Id</p>
                                </div>
                            </div>

                            <div class="mx-n5 px-5 py-4" style="background-color: #f2f2f2;">
                                <div class="row">

                                    <div class="col-md-8 col-lg-9">
                                        <p>Замовлення</p>
                                    </div>
                                    <div class="col-md-4 col-lg-3">
                                        <p>@Model.Burger - @Model.Meat</p>
                                    </div>

                                    <div class="col-md-8 col-lg-9">
                                        <p>Сума замовлення</p>
                                    </div>
                                    <div class="col-md-4 col-lg-3">
                                        <p>$@Model.Price</p>
                                    </div>
                                </div>
                                <!--    <div class="row">
                                    <div class="col-md-8 col-lg-9">
                                        <p class="mb-0">Shipping</p>
                                    </div>
                                    <div class="col-md-4 col-lg-3">
                                        <p class="mb-0">£33.00</p>
                                    </div>
                                </div>
                                </div>-->

                                <div class="row my-4">


                                        <div class="horizontal-timeline">
                                            <form method="post">
                                                <button id="Complete" class="btn btn-outline-success" asp-controller="Reservation" asp-action="DeleteConf" asp-route-id="@Model.Id">Виконанно</button>
                                            </form>
                                        </div>
                                    <div class="col-md-4 offset-md-8 col-lg-3 offset-lg-9">
                                        <p class="lead fw-bold mb-0" style="color: #f37a27;">$@Model.Price</p>
                                    </div>
                                </div>

                                <p class="lead fw-bold mb-4 pb-2" style="color: #f37a27;">Завершення замовлення</p>

                                <div class="row">
                                    <div class="col-lg-12">

                                    </div>
                                </div>

                                <p class="mt-4 pt-2 mb-0">Потрібна допомога <a href="#!" style="color: #f37a27;">Контакт з нами</a></p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>



