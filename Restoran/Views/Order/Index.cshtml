@using Restoran.Data.Enum
@model Order

@{
    ViewData["Title"] = "Замовлення";
}
<head>
    <link rel="stylesheet" href="css/order.css" asp-append-version="true"/>
</head>
<body>
<div class="header2">
    <div class="container"> 
        <div class="header-line">
            <div class="header-logo">
                <img src="~/lib/LOGO.png" alt="logo">
            </div>
                    
            <div class="nav">
                <a class="nav-item" asp-controller="Home" asp-action="Index">ГОЛОВНА</a>
                <a class="nav-item" asp-controller="Menu" asp-action="Index">МЕНЮ</a>
                <a class="nav-item" asp-controller="About" asp-action="Index">ПРО НАС</a>
                <a class="nav-item" asp-controller="Reservation" asp-action="Index">ЗАМОВЛЕННЯ</a>
            </div>
                    
            <div class="cart">
                <a href="*">
                    <img class="cart-img" src="lib/cart.png" alt="cart">
                </a>
            </div>
                    
            <div class="phone">
                <div class="phone-holder">
                    <div class="phone-img">
                        <img src="lib/phone.png"></img>
                    </div>
                    <div class="number"><a class="num" asp-controller="" asp-action="">+380-99-755-17-02</a></div>
                </div>
                        
                <div class="phone-text">Зателефонуйте нам для <br> бронювання</div>
            </div>
                    
            <div class="btn">
                <a class="button" asp-controller="Order" asp-action="Index" >Замовити бургер</a>
            </div>
        </div>
            
    </div>
</div>


<h4 class="title-form">Замовлення</h4>
<form id="OrderAdd" method="post">
    <div class="mb-3">
        <label class="form-label">Варіант бургера</label>
        <select asp-for="Burger" class="form-select mb-3" asp-items="Html.GetEnumSelectList<Burger>()"></select>
    </div>
    <label class="form-label">Варіант м'яса</label>
    <select asp-for="Meat" id="meat" class="form-select mb-3" asp-items="Html.GetEnumSelectList<Meat>()"></select>
    
    <label class="form-label">Ім'я для кого готується бургер і можна написати ще побажання</label>
    <input asp-for="Description" class="form-control" />
   <p></p> 

    <button   id="addOrder" class="submit-button" >Замовити</button>
</form>






</body>



@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>

    </script>

}